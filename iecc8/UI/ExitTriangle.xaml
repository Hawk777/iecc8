<ui:SignalBase x:Class="Iecc8.UI.ExitTriangle"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:ui="clr-namespace:Iecc8.UI"
		Width="8"
		Height="16">
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/iecc8;component/UI/Resources.xaml"/>
	</UserControl.Resources>
	<UserControl.Background>
		<StaticResource ResourceKey="BG"/>
	</UserControl.Background>
	<Path Fill="{StaticResource ResourceKey=IdleGrey}" RenderOptions.EdgeMode="Aliased">
		<Path.Data>
			<PathGeometry>
				<Geometry.Transform>
					<ScaleTransform ScaleX="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Path}}}" ScaleY="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Path}}}"/>
				</Geometry.Transform>
				<PathGeometry.Figures>
					<PathFigure>
						<PathFigure.StartPoint>
							<Point X="0" Y="0.125"/>
						</PathFigure.StartPoint>
						<PathFigure.Segments>
							<LineSegment>
								<LineSegment.Point>
									<Point X="0.375" Y="0.5"/>
								</LineSegment.Point>
							</LineSegment>
							<LineSegment>
								<LineSegment.Point>
									<Point X="0" Y="0.875"/>
								</LineSegment.Point>
							</LineSegment>
						</PathFigure.Segments>
					</PathFigure>
				</PathGeometry.Figures>
			</PathGeometry>
		</Path.Data>
	</Path>
</ui:SignalBase>
