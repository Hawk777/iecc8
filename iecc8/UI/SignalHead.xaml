<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="Iecc8.UI.SignalHead"
		Width="8"
		Height="16">
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/iecc8;component/UI/Resources.xaml"/>
	</UserControl.Resources>
	<UserControl.Background>
		<StaticResource ResourceKey="BG"/>
	</UserControl.Background>
	<Path x:Name="Lamp" Fill="{StaticResource IdleGrey}">
		<Path.Data>
			<EllipseGeometry RadiusX="0.25" RadiusY="0.25">
				<EllipseGeometry.Center>
					<Point X="0.25" Y="0.5"/>
				</EllipseGeometry.Center>
				<EllipseGeometry.Transform>
					<ScaleTransform ScaleX="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Path}}}" ScaleY="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Path}}}"/>
				</EllipseGeometry.Transform>
			</EllipseGeometry>
		</Path.Data>
	</Path>
</UserControl>
