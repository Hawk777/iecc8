<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		x:Class="Iecc8.UI.SignalStem"
		Width="8"
		Height="16">
	<UserControl.Resources>
		<ResourceDictionary Source="pack://application:,,,/iecc8;component/UI/Resources.xaml"/>
	</UserControl.Resources>
	<UserControl.Background>
		<StaticResource ResourceKey="BG"/>
	</UserControl.Background>
	<Canvas RenderOptions.EdgeMode="Aliased">
		<Path x:Name="StemPath" Fill="{StaticResource IdleGrey}">
			<Path.Data>
				<PathGeometry Figures="{StaticResource SignalStemAutomatic}">
					<PathGeometry.Transform>
						<ScaleTransform ScaleX="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}}" ScaleY="{Binding ActualHeight, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Canvas}}}"/>
					</PathGeometry.Transform>
				</PathGeometry>
			</Path.Data>
		</Path>
	</Canvas>
</UserControl>
